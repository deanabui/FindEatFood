<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:fillViewport="true"
    tools:context="edu.mills.findeatfood.RecipeDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/recipeIV"
            android:alpha=".8"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <CheckBox
            android:id="@+id/favorite_checkbox"
            android:button="@android:drawable/btn_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.41"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:textSize="25dp"/>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/favorite_checkbox">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_prep_time"
                android:gravity="left|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:gravity="right|center_vertical"
                android:layout_below="@+id/recipe_prep_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeIV"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/relativeLayout">

            <TextView
                android:id="@+id/recipe_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:layout_alignRight="@+id/recipe_name"
                android:layout_alignEnd="@+id/recipe_name" />

        </ScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:id="@+id/relativeLayout">

            <Button style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_instructions"
                android:text="Directions"
                android:gravity="center"
                android:onClick="Link to Recipe URL">
            </Button>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>