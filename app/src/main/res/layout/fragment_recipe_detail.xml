<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="edu.mills.findeatfood.RecipeDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/recipe_detail"
                android:layout_width="286dp"
                android:layout_height="61dp"
                android:layout_weight="0.69"
                android:gravity="center"
                android:text="@string/recipe_detail"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            //For the star

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.41"
                android:background="#00ffffff"
                android:gravity="right"
                android:src="@android:drawable/btn_star" />
        </LinearLayout>

        <TextView
            android:id="@+id/recipe_detail_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_detail_information" />

    </LinearLayout>

</ScrollView>
