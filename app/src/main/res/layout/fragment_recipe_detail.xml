<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="edu.mills.findeatfood.RecipeDetailFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#000000">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recipe_photo"
            android:src="@drawable/fridge_of_food"
            android:alpha=".3"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_name"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_margin="20dp"
            android:layout_alignParentTop="true"
            />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearlayout2"
            android:layout_below="@+id/recipe_name"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_ingredients"
                android:layout_margin="10dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:layout_alignRight="@+id/recipe_name"
                android:layout_alignEnd="@+id/recipe_name" />
        </ScrollView>



        <LinearLayout
            android:id="@id/linearlayout2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout"
            android:layout_centerHorizontal="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_prep_time"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:layout_below="@+id/recipe_prep_time"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"/>


            <CheckBox
                android:button="@android:drawable/btn_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:id="@+id/favorite_checkbox"
                android:background="@android:color/transparent"
                android:gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:id="@+id/relativeLayout">

            <Button style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_instructions"
                android:text="Directions"
                android:gravity="center"
                android:onClick="Link to Recipe URL">

            </Button>
          </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

